<%- include("../partials/header") %>
    <div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Create a New Campground</h1>	
		</div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
					<label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" id="name" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control-file" type="file" name="image" id="image" accept="image/*" required>
                </div>
				
                <div class="form-group">
					<label for="description">Description</label>
                    <input class="form-control" type="text" name="campground[description]" id="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
<%- include("../partials/footer") %>